    <RelativeLayout
            android:id="@+id/ToolBarLayout"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/mainBlack"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            app:layout_constraintBaseline_toTopOf="parent">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/oppo_profile_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>


            <TextView
                android:id="@+id/oppUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/oppo_profile_image"
                android:fontFamily="@font/baloo"
                android:includeFontPadding="false"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:textColor="@color/white"
                android:textSize="19dp" />


            <TextView
                android:id="@+id/oppoName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/oppUsername"
                android:layout_toEndOf="@id/oppo_profile_image"
                android:fontFamily="@font/baloo"
                android:includeFontPadding="false"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/oppo_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/oppUsername"
                android:fontFamily="@font/bungee_regular"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/ToolBarLayout"
        android:id="@+id/chessBoard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </RelativeLayout>

